{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "APPI Document Frontmatter Schema",
  "type": "object",
  "required": [
    "doc_type",
    "title",
    "source_url",
    "source_org",
    "source_type",
    "source_date",
    "retrieved_at",
    "lang",
    "tags",
    "confidence"
  ],
  "properties": {
    "doc_type": {
      "type": "string",
      "enum": [
        "summary",
        "points",
        "consulting",
        "changelog",
        "index",
        "notes"
      ]
    },
    "title": {
      "type": "string",
      "description": "文書タイトル（日本語）"
    },
    "title_en": {
      "type": "string",
      "description": "English title"
    },
    "source_url": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      ],
      "description": "一次情報URL（複数可）"
    },
    "source_org": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "発行組織（個人情報保護委員会、官報など）"
    },
    "source_type": {
      "type": "string",
      "enum": [
        "law",
        "guideline",
        "faq",
        "ruling",
        "press",
        "draft"
      ]
    },
    "source_version": {
      "type": "string",
      "description": "版・告示番号・公布日など"
    },
    "source_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "原文の公表/改定日 (YYYY-MM-DD)"
    },
    "retrieved_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "取得日 (YYYY-MM-DD)"
    },
    "last_reviewed_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "最終レビュー日 (YYYY-MM-DD)"
    },
    "lang": {
      "type": "string",
      "enum": [
        "ja",
        "en",
        "ja-en"
      ],
      "default": "ja"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "タグ（APPI、越境移転、委託、Cookieなど）"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "出典の一次性/明確さ/整合の自己評価"
    }
  }
}
