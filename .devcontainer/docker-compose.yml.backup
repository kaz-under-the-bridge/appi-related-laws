  #     - discovery.type=single-node
  #     - xpack.security.enabled=false
  #   ports:
  #     - "9200:9200"
  #   networks:
  #     - appi-kb-network

volumes:
  node_modules:

networks:
  appi-kb-network:
    driver: bridge
