version: '3.8'

services:
  app:
    build:
      context: ..
      dockerfile: .devcontainer/Dockerfile
    volumes:
      - ../:/workspace:cached
      - node_modules:/workspace/node_modules
    command: sleep infinity
    environment:
      - NODE_ENV=development
      - TZ=Asia/Tokyo
    networks:
      - appi-kb-network

  # 将来的な拡張用（検索エンジン、API等）
